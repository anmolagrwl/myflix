%article.video
  .container
    .row
      .video_large_cover.col-sm-7.col-sm-offset-1
        %img(src="#{@video.large_cover_url}")
      .video_info.col-sm-3
        %header
          %h3= @video.title
          %span Rating: 4.5/5.0
        %p= @video.description        
%section.reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for([@video, Review.new]) do |f|
        %fieldset
          = f.select :rating, options_for_select([5,4,3,2,1].map { |number| [pluralize(number, "Star")] }), label: "Rate this Video", class: "col-sm-3"
          = f.text_area :description, label: "Write Review", rows: 6, class: "col-sm-6"
        %fieldset
          %input(type="submit" value="Submit" class="btn")
          = link_to "Cancel", @video
  .row
    .col-sm-10.col-sm-offset-1
      %header
        %h3 User Reviews (#{@reviews.count})
      %ul
        - @reviews.each do | review |
          %article.review
            %li.row
              .col-sm-2
                %span Rating: #{review.rating} / 5
                %p by <a href="">#{review.user.full_name}</a>
              .col-sm-8
                %p #{review.description}
