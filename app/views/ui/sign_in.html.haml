%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_tag(inline_errors: true, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-6", class: "form-horizontal sign_in") do |f|        
        %header
          %h1 Register
        = f.alert_message "Please fix the errors below.", error_summary: false
        = f.email_field :email, label: "Email Address"
        = f.text_field :full_name,  label: "Full Name"
        = f.submit "Sign in", class: "col-sm-offset-2 btn btn-default"