%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        =bootstrap_form_for [:admin, @video], html: { class: "form-horizonal" } do |f|
          %ul.nav.nav-tabs
            %li
              %a(href="/ui/admin_views_payments") Recent Payments
            %li.active
              %a(href="") Add a New Video
            .form-group
              =f.text_field :title
            .form-group
              =f.select :category_ids, Category.all.flat_map{|category| [[category.name, category.id]]}
            .form-group
              =f.text_area :description, rows: 8, class: "span6"
            .form-group
              =f.file_field :large_cover, class: "form-control col-sm-3"
            .form-group
              =f.file_field :small_cover, class: "form-control col-sm-3"
            .form-group
              =f.url_field :url, label: "Video S3 URL"
            .form-group
              =f.submit "Add Video"